
{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",   
    "jsx": "react",                             
    "module": "commonjs",
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                              
  },
  "exclude": ["node_modules"],
  "include": ["src", "./src/declaration.d.ts"],
}


